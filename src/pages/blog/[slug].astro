---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const posts = await getCollection('blog', ({ data }) => !data.draft);
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<Layout
  title={post.data.title}
  description={post.data.description}
  canonical={`/blog/${post.slug}`}
>
  <article class="container" style="padding-top: 3rem; padding-bottom: 4rem;">
    <header style="margin-bottom: 2rem;">
      <time
        datetime={post.data.date.toISOString()}
        style="font-size: 0.8125rem; color: var(--color-text-muted); font-family: var(--font-mono);"
      >
        {post.data.date.toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric',
        })}
      </time>
      <h1
        style="font-size: 2rem; font-weight: 700; margin: 0.5rem 0 0 0; letter-spacing: -0.025em; line-height: 1.2;"
      >
        {post.data.title}
      </h1>
      {post.data.tags && post.data.tags.length > 0 && (
        <div style="margin-top: 1rem; display: flex; gap: 0.5rem; flex-wrap: wrap;">
          {post.data.tags.map((tag) => (
            <span
              style="font-size: 0.75rem; padding: 0.25rem 0.5rem; background: var(--color-surface); border-radius: var(--radius); color: var(--color-text-muted);"
            >
              {tag}
            </span>
          ))}
        </div>
      )}
    </header>
    <div class="prose">
      <Content />
    </div>
  </article>
</Layout>

<style>
  .prose :global(h2) {
    font-size: 1.375rem;
    font-weight: 600;
    margin: 2rem 0 1rem 0;
  }

  .prose :global(h3) {
    font-size: 1.125rem;
    font-weight: 600;
    margin: 1.5rem 0 0.75rem 0;
  }

  .prose :global(p) {
    margin: 0 0 1rem 0;
  }

  .prose :global(ul),
  .prose :global(ol) {
    margin: 0 0 1rem 0;
    padding-left: 1.5rem;
  }

  .prose :global(li) {
    margin-bottom: 0.25rem;
  }

  .prose :global(code) {
    font-family: var(--font-mono);
    font-size: 0.9em;
    background: var(--color-surface);
    padding: 0.15rem 0.4rem;
    border-radius: 0.25rem;
  }

  .prose :global(pre) {
    background: var(--color-surface);
    padding: 1rem;
    border-radius: var(--radius);
    overflow-x: auto;
    margin: 0 0 1rem 0;
  }

  .prose :global(pre code) {
    background: none;
    padding: 0;
  }
</style>
