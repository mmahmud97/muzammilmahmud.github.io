---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

// #region agent log
const raw = getCollection('blog');
fetch('http://127.0.0.1:7242/ingest/a03715b4-14c8-4789-9bd0-b624764268ce',{method:'POST',headers:{'Content-Type':'application/json'},body:JSON.stringify({location:'blog/index.astro:frontmatter',message:'getCollection return before await',data:{isPromise:raw instanceof Promise,hasFilter:typeof raw?.filter,constructor:raw?.constructor?.name},timestamp:Date.now(),hypothesisId:'A'})}).catch(()=>{});
const resolved = await raw;
fetch('http://127.0.0.1:7242/ingest/a03715b4-14c8-4789-9bd0-b624764268ce',{method:'POST',headers:{'Content-Type':'application/json'},body:JSON.stringify({location:'blog/index.astro:frontmatter',message:'getCollection after await',data:{isArray:Array.isArray(resolved),length:resolved?.length,hasFilter:typeof resolved?.filter},timestamp:Date.now(),hypothesisId:'A'})}).catch(()=>{});
const posts = resolved.filter((p) => !p.data.draft).sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
// #endregion
---

<Layout title="Blog" description="Blog posts by Muzammil Mahmud">
  <div class="container" style="padding-top: 3rem; padding-bottom: 4rem;">
    <h1 style="font-size: 2.25rem; font-weight: 700; margin: 0 0 1.5rem 0; letter-spacing: -0.025em;">
      Blog
    </h1>
    <p style="color: var(--color-text-muted); margin-bottom: 2rem;">
      Thoughts, tutorials, and updates.
    </p>
    <div class="post-list">
      {posts.map((post) => (
          <a href={`/blog/${post.slug}`} class="post-card">
            <span class="post-date">
              {post.data.date.toLocaleDateString('en-US', {
                year: 'numeric',
                month: 'short',
                day: 'numeric',
              })}
            </span>
            <h2 class="post-title">{post.data.title}</h2>
            {post.data.description && (
              <p class="post-desc">{post.data.description}</p>
            )}
          </a>
        ))}
    </div>
  </div>
</Layout>

<style>
  .post-list {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .post-card {
    display: block;
    padding: 1.5rem 0;
    border-bottom: 1px solid var(--color-border);
    color: inherit;
  }

  .post-card:hover {
    color: var(--color-text);
  }

  .post-date {
    font-size: 0.8125rem;
    color: var(--color-text-muted);
    font-family: var(--font-mono);
  }

  .post-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0.375rem 0 0 0;
  }

  .post-desc {
    font-size: 0.9375rem;
    color: var(--color-text-muted);
    margin: 0.5rem 0 0 0;
  }
</style>
